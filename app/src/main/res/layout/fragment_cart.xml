<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ravi_gupta.slider.Fragment.CartFragment"
    android:background="#f9f9f7" android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="0dp"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <ImageButton
            android:paddingRight="4dp"
            android:id="@+id/fragment_cart_imagebutton1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/dc_back_button"
            android:background="@drawable/button_style" />
        <!-- </RelativeLayout>-->

        <TextView
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/fragment_cart_textview1"
            android:textSize="20sp"
            android:layout_weight="3"
            android:textColor="#999"
            android:text="Cart"
            android:gravity="center|left"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_cart_button1"
            android:text="Next"
            android:textAllCaps="false"
            android:background="@drawable/button_style"
            android:textColor="#36B666"
            android:textSize="18sp"
            android:gravity="right|center"
            android:layout_marginRight="10dp"
            android:layout_gravity="right"
            android:layout_weight="0.2"/>

        </LinearLayout>


    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#EEE"
        android:id="@+id/view"
        android:layout_below="@+id/toolbar"/>

    <GridView
        android:layout_below="@+id/view"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2"
        android:background="#f9f9f7"
        android:layout_marginLeft="40dp"
        android:verticalSpacing="20dp"
        android:stretchMode="columnWidth"
        android:id="@+id/fragment_cart_gridview1">

    </GridView>

</RelativeLayout>
