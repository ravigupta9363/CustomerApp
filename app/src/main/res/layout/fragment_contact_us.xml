<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ravi_gupta.slider.Fragment.ContactUsFragment"
     android:background="#f9f9f7" android:clickable="true">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="0dp"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <ImageButton
            android:paddingRight="4dp"
            android:id="@+id/fragment_contact_us_imagebutton1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/dc_back_button"
            android:background="@drawable/ripple_button" />
        <!-- </RelativeLayout>-->

        <TextView
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/fragment_contact_us_textview4"
            android:textSize="20sp"
            android:textColor="#999"
            android:text="@string/fragment_contact_us_textview1" />


    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#EEE"
        android:id="@+id/view"
        android:layout_below="@id/toolbar"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

   <TextView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/fragment_contact_us_textview1"
       android:layout_gravity="center"
       android:layout_marginTop="10dp"
       android:layout_marginLeft="30dp"
       android:layout_marginRight="30dp"
       android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center|top">

        <Button
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Mail Us"
            android:textColor="#FFF"
            android:background="@drawable/round_button"
            android:id="@+id/fragment_contact_us_button1"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>


        <Button
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/round_button"
            android:textColor="#FFF"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Call Us"
            android:id="@+id/fragment_contact_us_button2"
            android:textStyle="bold"/>

    </LinearLayout>

    </LinearLayout>

</RelativeLayout>
