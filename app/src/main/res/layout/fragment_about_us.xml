<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    tools:context="com.example.ravi_gupta.slider.Fragment.AboutUsFragment"
    android:background="#FFF">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#EEE"
        android:id="@+id/view"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="0dp"
        android:padding="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_about_us_textview1"
            android:textSize="20dp"
            android:text="Drugcorner"
            android:layout_marginRight="10sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_about_us_textview2"
            android:text="v 1.1.1"
            android:textSize="15sp"/>


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fragment_about_us_textview3"
        android:lineSpacingMultiplier="1"
        android:padding="10dp"
        android:layout_marginLeft="5dp"
        android:maxLines = "100"
        android:scrollbars = "vertical"/>


</LinearLayout>
