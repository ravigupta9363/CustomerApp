<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ravi_gupta.slider.Fragment.NoAddressFoundFragment"
    android:clickable="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/no_address_found_background"/>
    

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            android:gravity="bottom|center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp">

           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/fragment_no_address_found_button1"
               android:background="@drawable/round_black_button"
               android:textColor="#FFF"
               android:text="Refresh"
               android:textAllCaps="true"
               android:layout_marginBottom="10dp"
               android:paddingLeft="20dp"
               android:paddingRight="20dp"/>

        </LinearLayout>
</RelativeLayout>

