<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#f9f9f7"
    tools:context="com.example.ravi_gupta.slider.Fragment.ProfileEditFragment" android:clickable="true">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="0dp"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

        <ImageButton
            android:paddingRight="4dp"
            android:id="@+id/fragment_profile_edit_imagebutton1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/dc_back_button"
            android:background="@drawable/ripple_button" />
        <!-- </RelativeLayout>-->

        <TextView
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/fragment_profile_edit_textview4"
            android:textSize="20sp"
            android:textColor="#999"
            android:gravity="center|left"
            android:text="@string/fragment_edit_profile_textview1"
            android:layout_weight="3"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fragment_edit_profile_button1"
            android:background="@drawable/ripple_button_rectangle"
            android:id="@+id/fragment_profile_edit_button1"
            android:textColor="#14649F"
            android:textSize="15sp"
            android:gravity="center"
            android:textAllCaps="false"
            android:layout_gravity="right"
            android:layout_weight="0.2"/>

        </LinearLayout>


    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#EEE"
        android:id="@+id/view"
        android:layout_below="@+id/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingLeft="30dp"
        android:paddingRight="20dp"
        android:layout_below="@+id/view">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/fragment_profile_edit_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:paddingBottom="0dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/fragment_profile_edit_edittext1"
            android:layout_marginBottom="0dp"
            android:gravity="center|left"
            android:hint="@string/fragment_edit_profile_edittext1"
            android:drawableLeft="@mipmap/dc_profile"
            android:textSize="15sp"
            android:singleLine="true"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/fragment_profile_edit_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/fragment_profile_edit_edittext2"
            android:gravity="center|left"
            android:layout_marginBottom="0dp"
            android:drawableLeft="@mipmap/dc_about"
            android:textSize="15sp"
            android:hint="@string/fragment_edit_profile_edittext2"
            android:inputType="textEmailAddress"
            android:singleLine="true"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/fragment_profile_edit_layout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/fragment_profile_edit_edittext3"
            android:gravity="center|left"
            android:textSize="15sp"
            android:inputType="phone"
            android:hint="@string/fragment_edit_profile_edittext3"
            android:drawableLeft="@mipmap/dc_nav_contact"
            android:singleLine="true"/>

        </android.support.design.widget.TextInputLayout>

        <CheckBox
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I accept all T &amp; C of company"
            android:id="@+id/fragment_profile_edit_checkbox1"/>
    </LinearLayout>
</RelativeLayout>
