
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"  android:layout_width="match_parent" >

    <LinearLayout  android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical"
    tools:context="com.example.ravi_gupta.slider.changeLocationFragment"
    android:background="#FFF" android:layout_marginTop="2dp" android:weightSum="8"
        android:id="@+id/fragment_change_location_container">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <com.example.ravi_gupta.slider.DelayAutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/location_edittext"
            android:id="@+id/locationEdittext"
            android:imeOptions="flagNoExtractUi|actionSearch"
            android:textSize="15sp"
            android:textColor="#999"
            android:paddingLeft="20dp"
            android:drawableLeft="@mipmap/dc_location"
            android:dropDownWidth="fill_parent"
            android:singleLine="true"
            android:inputType="text"
            android:text=""
            android:hint="Enter Location Here" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="#FFF"
            android:paddingBottom="5dp">


            <ProgressBar
                android:id="@+id/pb_loading_indicator"
                style="?android:attr/progressBarStyleSmall"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center" />

        </LinearLayout>

        </RelativeLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDD"/>


        <Button
            android:paddingLeft="20dp"
            android:drawableLeft="@mipmap/dc_location"
            android:drawablePadding="-145dp"
            android:id="@+id/fragment_change_location_button2"
            android:background="@drawable/button_style"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Use My Location"
            android:textSize="18sp"
            android:textAllCaps="false"/>

        <Button
            android:visibility="gone"
            android:paddingLeft="20dp"
            android:drawableLeft="@mipmap/dc_location"
            android:drawablePadding="-120dp"
            android:id="@+id/fragment_change_location_button1"
            android:background="@drawable/button_style"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="Use My Location"
            android:textSize="18sp"
            android:textAllCaps="false"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDD"/>

        <ListView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/addressListView" />


    </LinearLayout>

    <ProgressBar
        android:layout_centerInParent="true"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:visibility="gone"/>

</RelativeLayout>
