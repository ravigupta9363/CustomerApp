<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@drawable/dc_background"
    tools:context="com.example.ravi_gupta.slider.Fragment.ProfileFragment"
    android:orientation="vertical" android:id="@+id/fragment_profile_layout" android:clickable="true">

    <!-- TODO: Update blank fragment layout -->
    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="0dp"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:contentInsetStart="0dp">

       <!-- <com.andexert.library.RippleView
            android:id="@+id/more"
            android:layout_width="?android:actionBarSize"
            android:layout_height="?android:actionBarSize"
            android:layout_toLeftOf="@+id/more2"
            rv_centered="true">-->

        <ImageButton
            android:paddingRight="4dp"
            android:id="@+id/fragment_profile_imagebutton1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/dc_back_button"
            android:background="@drawable/ripple_button" />

       <!-- </com.andexert.library.RippleView>-->

        <TextView
            android:padding="2dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/fragment_profile_textview4"
            android:textSize="20sp"
            android:textColor="#999"
            android:text="Profile" />


    </android.support.v7.widget.Toolbar>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#EEE"
        android:id="@+id/view"
        android:layout_below="@+id/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="20dp"
        android:paddingLeft="30dp"
        android:layout_below="@+id/view">

       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:id="@+id/fragment_profile_textview1"
           android:drawableLeft="@mipmap/dc_profile"
           android:hint="Username"
           android:layout_marginBottom="5dp"
           android:gravity="center|left"
           android:textSize="15sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_profile_textview2"
            android:drawableLeft="@mipmap/dc_about"
            android:hint="Email Id"
            android:gravity="center|left"
            android:layout_marginBottom="5dp"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_profile_textview3"
            android:drawableLeft="@mipmap/dc_nav_contact"
            android:hint="Mobile Number"
            android:gravity="center|left"
            android:textSize="15sp"/>

        <Button
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Edit"
            android:textColor="#FFF"
            android:background="@drawable/round_button"
            android:id="@+id/fragment_profile_button1"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_gravity="center"/>

    </LinearLayout>

</RelativeLayout>
