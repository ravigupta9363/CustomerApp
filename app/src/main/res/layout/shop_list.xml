<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#f9f9f7"
    android:paddingTop="5dp" android:paddingBottom="5dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:paddingTop="13dp"
        android:layout_gravity="top"
        android:gravity="top">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@mipmap/dc_logo6"
            android:id="@+id/shop_list_imageview1"
            android:layout_gravity="top"
            android:scaleType="fitStart"/>

    </LinearLayout>

    <LinearLayout

        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#555"
            android:id="@+id/shop_list_textview1"
            android:text="Apollo Pharmacy"
            android:layout_weight="1.5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:id="@+id/shop_list_textview2"
            android:text="-7%"
            android:textColor="#999"
            android:layout_weight="0.5"
            android:gravity="right"/>

    </LinearLayout>

    <TextView
        android:paddingBottom="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#CCC"
        android:text="U Block"
        android:id="@+id/shop_list_textview3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp">

            <TextView
                android:id="@+id/shop_list_textview4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="35 min delivery"
                android:textColor="#AAA" />


        </LinearLayout>



    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

        <TextView
            android:id="@+id/shop_list_textview6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Fulfilment 36%"
            android:textSize="13sp"
            android:textColor="#AAA"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/shop_list_textview5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Return"
            android:textSize="12sp"
            android:gravity="right"/>


    </LinearLayout>

    </LinearLayout>

</LinearLayout>