<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#FFFFFB"
    android:padding="10dp" android:paddingBottom="5dp" android:paddingTop="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:id="@+id/shop_list_textview1"
            android:text="Apollo Pharmacy"
            android:layout_weight="1.5"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:id="@+id/shop_list_textview2"
            android:text="-7%"
            android:textColor="#999"
            android:layout_weight="0.5"
            android:gravity="right"/>

    </LinearLayout>

    <TextView
        android:paddingBottom="0dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:textColor="#CCC"
        android:text="U Block"
        android:id="@+id/shop_list_textview3"/>



    <TextView
        android:id="@+id/shop_list_textview4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:text="35 min delivery"
        android:textColor="#AAA"
        android:paddingBottom="5dp"/>



    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

        <TextView
            android:id="@+id/shop_list_textview6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order Fulfilment 36%"
            android:textSize="13sp"
            android:textColor="#AAA"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/shop_list_textview5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Return"
            android:textSize="12sp"
            android:gravity="right"/>

    </LinearLayout>

</LinearLayout>