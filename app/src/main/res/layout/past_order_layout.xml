<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="#f9f9f7"
    android:paddingRight="10dp" android:paddingTop="15dp" android:paddingBottom="10dp">

    <LinearLayout
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:gravity="top"
        android:layout_marginLeft="10dp"
        android:layout_gravity="top">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#CCC"
            android:id="@+id/past_order_layout_imageview1" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@mipmap/dc_date"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="26 JULY 2015"
                android:textSize="10sp"
                android:id="@+id/past_order_layout_textview1"
                android:paddingTop="3dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@mipmap/dc_time"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="02 : 25 PM"
                android:textSize="10sp"
                android:id="@+id/past_order_layout_textview2"
                android:paddingTop="3dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:src="@mipmap/dc_order"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DC25956"
                android:textSize="10sp"
                android:id="@+id/past_order_layout_textview3"
                android:paddingTop="3dp" />

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Delivered"
            android:gravity="right"
            android:layout_gravity="right"
            android:id="@+id/past_order_layout_button1"
            android:textColor="#36B666"
            android:focusable="false"/>

    </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="address"
            android:textColor="#AAA"
            android:paddingLeft="20dp"
            android:textSize="13sp"
            android:layout_marginTop="5dp"
            android:id="@+id/past_order_layout_textview5"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Reorder"
            android:background="@drawable/button_style"
            android:paddingLeft="20dp"
            android:paddingRight="5dp"
            android:gravity="center|right"
            android:id="@+id/past_order_layout_button2"
            android:textColor="#14649F"
            android:focusable="false"
            android:layout_gravity="right"
            android:layout_alignParentRight="true"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>